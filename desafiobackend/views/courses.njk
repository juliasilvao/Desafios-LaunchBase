{% extends "layout.njk" %}
{% block head %}
    <title>Sobre - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Conte√∫dos</h1>
    </div>

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card__content-space">
                    <div class="card__image-title">
                        <img src="{{item.image_url}}" alt="Imagem do {{item.title}}">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card__info">
                        <p>{{item.modules}}</p>
                        <p class="info">{{item.description}}</p>
                        <p class="card__price">{{item.price}}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="/scripts.js"></script>

{% endblock %}